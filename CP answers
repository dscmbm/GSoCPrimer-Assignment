#Question 1:
def multiplication(a, b):
    result = a*b
    return result
# calling function
a = 5
b = 3
result = multiplication(a,b)
print(f"The product of {a} and {b} is: {result}")


# Question 2:
def check_evenorodd(num):
    if num % 2 == 0:
        return "Even"
    else:
        return "Odd"

# calling function
num = 7
result = check_evenorodd(num)
print(f"The number {num} is {result}.")

# Question 3:
def factorial(N):
    if N == 0 or N == 1:
        return 1
    else:
        result = 1
        for i in range(2, N + 1):
            result *= i
        return result

n = 5
result = factorial(n)
print(f"The factorial of {n} is: {result}")

# Question 4:
def numofvowels(s):
    vowels = "aeiouAEIOU"
    count = 0
    for char in s:
        if char in vowels:
            count += 1
    return count

string = "Hello, World!"
result = numofvowels(string)
print(f"The number of vowels in '{string}' is: {result}")

# Question 5:
def maximum(arr):
    if not arr:
        return None  

    maxnum = arr[0]
    for num in arr:
        if num > maxnum:
            maxnum = num
    return maxnum

arr = [10, 5, 8, 20, 15]
max_number = maximum(arr)

if max_number is not None:
    print(f"The maximum number in the array is: {max_number}")
else:
    print("The array is empty.")

# Question 6:
def minimum(arr):
    if not arr:
        return None  

    mininum = arr[0]
    for num in arr:
        if num < mininum:
            mininum = num
    return mininum

arr = [10, 5, 8, 20, 15]
min_number = minimum(arr)

if min_number is not None:
    print(f"The minimum number in the array is: {min_number}")
else:
    print("The array is empty.")


# Question 7:

def swap(x, y):
    temp = x
    x = y
    y = temp
    return x, y

a = 5
b = 10

print(f"Before swapping: x = {a}, y = {b}")

x, y = swap(x, y)

print(f"After swapping: x = {a}, y = {b}")

# Question 8:
def isleapyear(year):
    if (year % 4 == 0 and year % 100 != 0) or (year % 400 == 0):
        return True
    else:
        return False

year = 2024

if isleapyear(year):
    print(f"{year} is a leap year.")
else:
    print(f"{year} is not a leap year.")

# Question 9:
    

def reverse(s):
    reversed_s = s[::-1]
    return reversed_s

string = "Hello, World!"
result = reverse(string)
print(f"The reversed string of '{string}' is: '{result}'")

# Question 10:

def maximum(A, B, C):
    
    if A > B:
        if A > C:
            return A
        else:
            return C
    else:
        if B > C:
            return B
        else:
            return C
A = int(input("Enter the value of A: "))
B = int(input("Enter the value of B: "))
C = int(input("Enter the value of C: "))

maximum_number = maximum(A, B, C)
print(f"The maximum number among {A}, {B}, and {C} is: {maximum_number}")


