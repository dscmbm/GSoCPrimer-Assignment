    cout<<"minimum in array "<<min<<endl;
     cout << "Before swap: A = " << A << ", B = " << B << endl;
    swap(A, B);
    cout << "After swap: A = " << A << ", B = " << B << endl;
    int year;

    cout << "Enter a year: ";
